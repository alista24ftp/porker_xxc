/* pages/member/addressAdd/addressAdd.wxss */
.addr-info .addr-title {
    line-height: 40rpx;
    text-align: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    border-bottom: 1px solid #394567;
}

.addr-info .infos {
    margin-top: 22rpx;
    background-color: #fff;
}

.addr-info .infos .item {
    display: flex;
    align-items: center;
    height: 90rpx;
    border-bottom: 1px solid #f3f3f3;
}

.addr-info .infos .item .label {
    flex: 3;
    font-size: 28rpx;
}

.addr-info .infos .item .right {
    flex: 4;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #666;
}

.addr-info .infos .item .right .txtInput {
    width: 100%;
    height: 75rpx;
    font-size: 28rpx;
    border: 0;
    color: #666;
}

.addr-info .infos .item .right .set-def {
    margin-right: 20rpx;
}

.form-buttons {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.form-buttons .left {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
}

.form-buttons .right {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #b4282d;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}