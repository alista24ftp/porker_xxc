/* pages/category/category.wxss */
.wrap{
    display: flex;
    /*background: #f8f8f8;*/
    width: 100%;
    height: 100%;
}
.navLeft{
    width: 30%;
    /*border-right: 1px solid #ccc; */
    background: #eee;
    height: 100%;
    position: fixed;
}
.navLeft text{
    display: block;
    font-size: 14px;
    text-align: center;
    line-height: 98rpx;
    height: 98rpx;
    border-bottom: 1px solid #eee; 
}
.navLeft .active{
    box-sizing: border-box;
    background: #fff;
    position: relative;
}
.navLeft .active:after{
  background: #e21a81;
  width: 10rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  top:50%;
  left: 0;
  content: "";
  margin-top: -15rpx;
}
.navRight{
    width:70%;
    height: 100%;
    /*position: fixed;*/
    margin-left: 30%;
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    padding-top: 30rpx;
}
.navRight-main-item{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
}
.navRight-main-item-list{
    display: flex;
    margin-right: 40rpx;
    /* display: -webkit-flex;
    flex-wrap:wrap; */
}

.navRight-main-item-list .prod{
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.navRight-main-item-list .prod image{
    width:60px;
    height: 60px;
}
.navRight-main-item-list .prod text{
    display: block;
    font-size: 12px;
    color: #666;
    margin: 12px 0;  
}