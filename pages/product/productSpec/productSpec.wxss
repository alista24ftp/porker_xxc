/* pages/product/productSpec/productSpec.wxss */
.spec-info .spec-title {
    line-height: 40rpx;
    text-align: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    border-bottom: 1px solid #394567;
}

.spec-list {
  background-color: #fff;
  margin-bottom: 22rpx;
  padding-left: 115rpx;
  overflow: hidden;
  margin-top:20rpx;
}

.spec-list .spec-item {
  width: 100%;
  height: 206rpx;
  position: relative;
  left: 0;
}

.spec-sel {
    display: flex;
    background-color: #fff;
}

.spec-sel .less, .spec-sel .plus {
    width: 115rpx;
    height: 66rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.spec-sel .less {
    border: 1px solid #999;
    border-right: 0;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
}

.spec-sel .plus {
    border: 1px solid #999;
    border-left: 0;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

.spec-sel .dis {
    border-color: #d9d9d9;
}

.spec-sel .dis .icon {
    color: #d9d9d9;
}

.spec-sel .dis .txt {
    border: 1px solid #d9d9d9;
    color: #d9d9d9;
}

.spec-sel .textWrap {
    width: 154rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 66rpx;
}

.spec-sel .icon {
    font-size: 49rpx;
}

.spec-sel .textWrap .txt {
    width: 100%;
    height: 66rpx;
    font-size: 33rpx;
    text-align: center;
}

.spec-list .spec-sel {
    position: absolute;
    bottom: 41rpx;
    right: 22rpx;
}

.spec-list .spec-sel .less, .spec-list .spec-sel .plus {
    width: 49rpx;
    height: 51rpx;
}

.spec-list .spec-sel .textWrap .txt {
    line-height: 50rpx;
    height:50rpx;
}

.spec-list .spec-sel .textWrap {
    height:50rpx;
    width: 75rpx;
    border: 1px solid #999;
}

.form-buttons {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.form-buttons .left {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
}

.form-buttons .right {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #b4282d;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}